@model  CategoryModel

<form asp-controller="Admin" asp-action="AddCategory" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-2 col-form-label"></label>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Name" id="example-text-input">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-ms-2">
            <button type="submit" class="btn btn-primary">Save Category</button>
        </div>
    </div>
</form>