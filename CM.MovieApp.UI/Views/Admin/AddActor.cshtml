        <script>
        $(document).ready(function(){
        $("#name").change(function(){
            let id=$("#name").val();
            $.ajax({
                contentType:"application/json; charset=Uft-8;",
                dataType:"json",
                type:"Get",
                url:"/admin/getActorName",
                data:{actorName:id},
                success:function(data){
                    if(data==true)
                    alert("Eklemeye Çalıştığınız Aktör Zaten Database'de kayıtlıdır.")
                }
            })
        });
        });
